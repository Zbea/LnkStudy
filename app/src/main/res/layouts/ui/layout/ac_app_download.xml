<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <include layout="@layout/common_title"/>

    <RadioGroup
        android:id="@+id/rg_app"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_tool"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="180dp"
            android:button="@null"
            android:text="工具"
            android:textSize="@dimen/sp_24"
            android:textColor="@drawable/color_black_gray_selector"
            android:textStyle="bold"
            android:checked="true"
            android:gravity="center"
            android:background="@drawable/bg_rb_line_selector"/>

        <RadioButton
            android:id="@+id/rb_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="76dp"
            android:button="@null"
            android:gravity="center"
            android:text="壁纸"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:textColor="@drawable/color_black_gray_selector"
            android:background="@drawable/bg_rb_line_selector"/>

        <RadioButton
            android:id="@+id/rb_painting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="76dp"
            android:button="@null"
            android:gravity="center"
            android:text="书画"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:textColor="@drawable/color_black_gray_selector"
            android:background="@drawable/bg_rb_line_selector"/>

    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tool"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="88dp"
        android:layout_weight="1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:layout_weight="1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_painting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:layout_weight="1"/>

    <include layout="@layout/common_page_number" />

</LinearLayout>