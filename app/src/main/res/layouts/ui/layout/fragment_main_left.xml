<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/common_fragment_title"
        />

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="552dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="7dp"
            android:paddingBottom="7dp"
            android:background="@mipmap/icon_main_content_left_bg"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_content_title_height"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                >
                <TextView
                    android:id="@+id/tv_date_today"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_content_title_height"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_main_celender"
                    android:drawablePadding="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_calender_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_more"
                    />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp">

                <com.bll.lnkstudy.widget.RoundImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_date_event_bg"
                    app:leftBottomRadius="@dimen/dp_20"
                    app:rightBottomRadius="@dimen/dp_20"
                    />

                <ImageView
                    android:id="@+id/iv_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    />
                <ImageView
                    android:id="@+id/iv_calender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/v_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:src="@mipmap/icon_main_up"/>

                <ImageView
                    android:id="@+id/v_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/icon_main_down"/>

                <ImageView
                    android:id="@+id/iv_change"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@mipmap/icon_main_change"
                    />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/ll_main_plan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="7dp"
            android:paddingBottom="7dp"
            android:background="@mipmap/icon_main_content_left_bg"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_content_title_height"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                >
                <TextView
                    android:id="@+id/tv_plan"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_content_title_height"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_main_date"
                    android:drawablePadding="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/main_date_plan"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_date_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_more"
                    />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="552dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="7dp"
            android:paddingBottom="7dp"
            android:background="@mipmap/icon_main_content_left_bg"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_content_title_height"
                android:drawableLeft="@mipmap/icon_main_message"
                android:drawablePadding="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/main_homework_message"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"/>

        </LinearLayout>


        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="7dp"
            android:paddingBottom="7dp"
            android:background="@mipmap/icon_main_content_left_bg"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_content_title_height"
                android:drawableLeft="@mipmap/icon_main_correct"
                android:drawablePadding="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/homework_correct_details_str"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>