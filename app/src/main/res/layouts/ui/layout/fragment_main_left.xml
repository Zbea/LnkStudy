<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/common_fragment_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_plan"
            android:layout_width="368dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_black_stroke_10dp_corner"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_height="@dimen/main_content_title_height">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_main_date"
                    android:drawablePadding="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/main_date_plan"
                    android:textSize="@dimen/sp_26"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_date_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/ll_main_day"
            android:layout_width="368dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_black_stroke_10dp_corner"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_height="@dimen/main_content_title_height">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_main_date"
                    android:drawablePadding="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/main_date_day"
                    android:textSize="@dimen/sp_26"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_lunar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="610dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_classgroup"
            android:layout_width="368dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_black_stroke_10dp_corner"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_content_title_height"
                android:drawableLeft="@mipmap/icon_main_group"
                android:drawablePadding="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/main_classgroup"
                android:textSize="@dimen/sp_26"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />

            <LinearLayout
                android:id="@+id/ll_address_list"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/addressList"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:layout_marginStart="@dimen/dp_15"
                    />

                <TextView
                    android:id="@+id/tv_address_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:drawablePadding="@dimen/dp_15"
                    android:drawableEnd="@mipmap/icon_arrow_right"
                    />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                />

        </LinearLayout>


        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/ll_main_book"
            android:layout_width="368dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_black_stroke_10dp_corner"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_content_title_height"
                android:drawableLeft="@mipmap/icon_main_group"
                android:drawablePadding="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/main_book"
                android:textSize="@dimen/sp_26"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>