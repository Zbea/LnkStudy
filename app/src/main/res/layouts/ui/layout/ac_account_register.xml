<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/statusbar_height"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="账号"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/user_tip"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_25"
                android:lines="1"
                android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:background="@drawable/bg_line_bottom" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold"
                android:text="密码" />

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/psw_tip"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_25"
                android:lines="1"
                android:background="@drawable/bg_line_bottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold"
                android:text="姓名" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入姓名"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_25"
                android:lines="1"
                android:background="@drawable/bg_line_bottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_date_resiter"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold"
                android:text="生日" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="选择日期"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_25"
                android:lines="1"
                android:background="@drawable/bg_line_bottom" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold"
                android:text="手机号码" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/phone_tip"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:textSize="@dimen/sp_25"
                android:lines="1"
                android:background="@drawable/bg_line_bottom" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold"
                android:text="验证码" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_line_bottom"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="请输入验证码"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:textSize="@dimen/sp_25"
                    android:lines="1"
                    android:background="@null" />

                <Button
                    android:id="@+id/btn_code"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@drawable/click_btn_black_solid_5dp"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_22" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_25"
                    android:textStyle="bold"
                    android:text="@string/school_message" />

                <TextView
                    android:id="@+id/tv_school"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_25"
                    android:hint="@string/school"
                    android:textColorHint="@color/color_text_hint"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"
                    app:drawableRightCompat="@mipmap/icon_arrow_down" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_25"
                    android:textStyle="bold"
                    android:text="@string/family" />

                <EditText
                    android:id="@+id/et_parent_name"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:hint="家长姓名"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textSize="@dimen/sp_25"
                    android:lines="1"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"/>
                <EditText
                    android:id="@+id/et_parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:hint="家长称谓"
                    android:layout_marginStart="@dimen/dp_20"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textSize="@dimen/sp_25"
                    android:lines="1"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"/>
                <EditText
                    android:id="@+id/et_parent_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="家长电话"
                    android:layout_marginStart="@dimen/dp_20"
                    android:textColorHint="@color/color_text_hint"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textSize="@dimen/sp_25"
                    android:lines="1"
                    android:inputType="phone"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btn_height"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/click_btn_black_solid"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_25" />


</LinearLayout>