<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:paddingTop="@dimen/statusbar_height"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="账号："
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="I    D："
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_account_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/btn_edit_name"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="修改姓名"
                android:background="@drawable/bg_black_solid_10dp_corner"
                android:textColor="@color/white"
                android:textSize="16sp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="年级："
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/btn_edit_grade"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="修改年级"
                android:background="@drawable/bg_black_solid_10dp_corner"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="生日："
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="手机："
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="******"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/btn_edit_psd"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="修改密码"
                android:background="@drawable/bg_black_solid_10dp_corner"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                android:text="家庭信息:" />

            <TextView
                android:id="@+id/tv_parent"
                android:layout_width="200dp"
                android:layout_height="@dimen/dp_45"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="@dimen/sp_20"
                android:lines="1"
                android:background="@drawable/bg_gray_stroke_5dp_corner"/>
            <TextView
                android:id="@+id/tv_parent_name"
                android:layout_width="120dp"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="@dimen/dp_20"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="@dimen/sp_20"
                android:lines="1"
                android:background="@drawable/bg_gray_stroke_5dp_corner"/>
            <TextView
                android:id="@+id/tv_parent_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="@dimen/dp_20"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="@dimen/sp_20"
                android:lines="1"
                android:inputType="phone"
                android:background="@drawable/bg_gray_stroke_5dp_corner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="@dimen/sp_20"
                android:lines="1"
                android:background="@drawable/bg_gray_stroke_5dp_corner"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_margin="100dp"
        android:background="@drawable/bg_btn_black_solid"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="24sp" />


</LinearLayout>