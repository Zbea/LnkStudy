<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:paddingTop="@dimen/statusbar_height"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"/>

            <TextView
                android:id="@+id/btn_edit_name"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/edit_name"
                android:background="@drawable/click_btn_black_solid_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_22"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/birthday"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"/>

            <TextView
                android:id="@+id/btn_edit_birthday"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="修改生日"
                android:background="@drawable/click_btn_black_solid_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_22"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"/>

            <TextView
                android:id="@+id/btn_edit_phone"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="修改号码"
                android:background="@drawable/click_btn_black_solid_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_22"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_25"
                    android:text="@string/school_message" />

                <TextView
                    android:id="@+id/tv_provinces"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_25"
                    android:background="@drawable/bg_black_stroke_5dp_corner"/>

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_20"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_25"
                    android:background="@drawable/bg_black_stroke_5dp_corner"/>
                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_20"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_25"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_school_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_weight="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_25"
                    android:background="@drawable/bg_black_stroke_5dp_corner"/>

                <TextView
                    android:id="@+id/btn_edit_school"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/edit_school_message"
                    android:background="@drawable/click_btn_black_solid_5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_22"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"
                android:text="@string/family" />

            <TextView
                android:id="@+id/tv_parent"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="@dimen/sp_25"
                android:lines="1"
                android:background="@drawable/bg_black_stroke_5dp_corner"/>
            <TextView
                android:id="@+id/tv_parent_name"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="@dimen/sp_25"
                android:lines="1"
                android:background="@drawable/bg_black_stroke_5dp_corner"/>
            <TextView
                android:id="@+id/tv_parent_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="@dimen/sp_25"
                android:lines="1"
                android:background="@drawable/bg_black_stroke_5dp_corner"/>

            <TextView
                android:id="@+id/btn_edit_parent"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/dp_20"
                android:gravity="center"
                android:text="修改信息"
                android:background="@drawable/click_btn_black_solid_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_22"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btn_height"
        android:layout_margin="100dp"
        android:background="@drawable/click_btn_black_solid"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_25" />


</LinearLayout>