<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/statusbar_height"
    android:background="@color/bg_page"
    >

    <include layout="@layout/common_title"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/bg_line_bottom"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="@string/date_day_content_hint"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/date_day_date_hint"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/date_day_time_str"/>

        <TextView
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/date_day_remind_str"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        />


</LinearLayout>