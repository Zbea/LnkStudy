<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">
    <View
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_height"
        android:background="@color/color_transparent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.android.internal.widget.PreferenceImageView
            android:id="@+id/v_content_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/drawing_book_height"
            android:layout_weight="1"
            android:visibility="gone"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.android.internal.widget.PreferenceImageView
                android:id="@+id/v_content_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/drawing_book_height"
                android:scaleType="fitCenter" />

            <View
                android:id="@+id/ll_show"
                android:layout_width="@dimen/drawing_book_height"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/ll_work"
                android:layout_width="@dimen/drawing_book_height"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:gravity="center"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:id="@+id/btn_page_up"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawing_book_height"
                    android:layout_marginTop="150dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_draw_page_up" />

                <ImageView
                    android:id="@+id/btn_page_down"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawing_book_height"
                    android:layout_marginTop="60dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_draw_page_down" />

                <ImageView
                    android:id="@+id/iv_erasure"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawing_book_height"
                    android:layout_marginTop="60dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_draw_erasure" />

                <ImageView
                    android:id="@+id/iv_draft"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawing_book_height"
                    android:layout_marginTop="60dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_draw_draft" />

                <View
                    android:id="@+id/ll_hide"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/iv_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawing_book_height"
                    android:layout_marginBottom="60dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_draw_commit" />


                <ImageView
                    android:id="@+id/iv_tool"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawing_book_height"
                    android:layout_marginBottom="60dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_draw_tool" />

                <ImageView
                    android:id="@+id/iv_catalog"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawing_book_height"
                    android:layout_marginBottom="60dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_draw_catalog" />


                <ImageView
                    android:id="@+id/iv_expand"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawing_book_height"
                    android:layout_marginBottom="150dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_draw_expand" />


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


    <include
        android:id="@+id/ll_geometry"
        layout="@layout/common_drawing_geometry"
        android:visibility="gone"
        android:layout_marginTop="@dimen/statusbar_height"
        android:layout_width="@dimen/width"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/iv_geometry"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:padding="1dp"
        android:src="@mipmap/icon_app_geometry"
        android:background="@drawable/bg_black_stroke_0dp_corner"
        />

</RelativeLayout>