<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/statusbar_height"
    android:background="@color/bg_page"
    >

    <include
        layout="@layout/common_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_black_stroke_5dp_corner"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                android:text="导入学苑本全部资料"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                android:text="使用条件：更换新的学苑本使用"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_download"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="一键导入"
            android:background="@drawable/click_btn_line_black_5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_black_stroke_5dp_corner"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                android:text="导入部分课本作业资料"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                android:text="使用条件：租用空的学苑本暂时使用"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_rent"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="部分导入"
            android:background="@drawable/click_btn_line_black_5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_black_stroke_5dp_corner"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                android:text="清空本地学苑本全部内容"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                android:text="使用条件：退还空的学苑本"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="一键清空"
            android:background="@drawable/click_btn_line_black_5dp"
            />

    </LinearLayout>

</LinearLayout>