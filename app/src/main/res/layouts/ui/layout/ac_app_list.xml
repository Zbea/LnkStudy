<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/statusbar_height"
    android:background="@color/bg_page">

    <include layout="@layout/common_title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/dp_50"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tool"
            android:layout_marginStart="76dp"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_36"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="horizontal"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tool"
                android:layout_width="740dp"
                android:layout_height="396dp"
                android:layout_marginStart="54dp"
                android:paddingTop="@dimen/dp_20"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:background="@drawable/bg_gray_stroke_10dp_corner"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:text="@string/add"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_26"
                    android:gravity="center"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"/>

                <TextView
                    android:id="@+id/tv_remove"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="35dp"
                    android:text="@string/eliminate"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_26"
                    android:gravity="center"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>