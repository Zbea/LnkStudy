<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="718dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20"
    android:paddingStart="@dimen/dp_50"
    android:paddingEnd="@dimen/dp_50"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_erasure"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:scaleType="center"
            android:src="@mipmap/icon_draw_erasure" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/iv_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/icon_date_arrow_up"
            />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@mipmap/icon_date_arrow_down"
            />

    </LinearLayout>
    <com.android.internal.widget.PreferenceImageView
        android:id="@+id/v_content"
        android:layout_width="match_parent"
        android:layout_height="970dp"
        android:background="@mipmap/icon_date_event_bg"
        />


</LinearLayout>