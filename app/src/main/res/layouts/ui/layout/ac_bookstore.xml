<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/statusbar_height"
    android:background="@color/bg_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="52dp"
            android:scaleType="center"
            android:src="@mipmap/icon_back"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/iv_back"
            android:textColor="@color/black"
            android:textSize="@dimen/navigation_text"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="36dp"
            >

            <TextView
                android:id="@+id/tv_province"
                android:layout_width="170dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_40"
                android:background="@drawable/bg_gary_arch"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_course"
                android:layout_width="170dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_40"
                android:background="@drawable/bg_gary_arch"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:gravity="center"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="170dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_40"
                android:background="@drawable/bg_gary_arch"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:gravity="center"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_semester"
                android:layout_width="170dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_40"
                android:background="@drawable/bg_gary_arch"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:gravity="center"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="200dp"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_gary_arch"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_40"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:background="@color/color_transparent"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/dp_15">
        <com.bll.lnkstudy.widget.FlowRadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="60dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_download"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@drawable/bg_gray_stroke_5dp_corner"
            android:gravity="center"
            android:text="@string/download"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_weight="1"/>

    <include layout="@layout/common_page_number"
        />

</LinearLayout>