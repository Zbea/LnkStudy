<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_black_stroke_0dp_corner"
    android:padding="@dimen/dp_30"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_marginRight="20dp"
            android:text="@string/axis"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_vertical"
            android:button="@drawable/bg_check_selector"
            android:text="@string/scale"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="刻度值："
            android:textSize="20sp"
            android:visibility="gone"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_scale"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="10"
            android:gravity="center"
            android:textSize="20sp"
            android:digits="1234567890"
            android:inputType="number"
            android:visibility="gone"
            android:background="@drawable/bg_line_bottom"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_axis1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/axis_one"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_axis_1"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_axis2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/axis_two"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_axis_2"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_axis3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/axis_three"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_axis_3"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>