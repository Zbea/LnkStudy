<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_black_stroke_0dp_corner"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    >

    <CalendarView
        android:id="@+id/dp_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:firstDayOfWeek="2"
        android:weekDayTextAppearance="@android:style/TextAppearance.DialogWindowTitle"
        android:dateTextAppearance="@android:style/TextAppearance.DialogWindowTitle"
        />

</LinearLayout>