<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="913dp"
    android:background="@drawable/bg_black_stroke_0dp_corner"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="草稿纸"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="80dp"
            android:scaleType="center"
            android:src="@mipmap/icon_close"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_marginEnd="13dp"
        >
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="13dp"
            android:text="1"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:background="@drawable/bg_gray_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="13dp"
            android:text="2"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:background="@drawable/bg_gray_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="13dp"
            android:text="3"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:background="@drawable/bg_gray_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="13dp"
            android:text="4"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:background="@drawable/bg_gray_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_5"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="35dp"
            android:text="5"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:background="@drawable/bg_gray_stroke_5dp_corner"
            />

    </LinearLayout>

    <com.android.internal.widget.PreferenceImageView
        android:id="@+id/v_content_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.android.internal.widget.PreferenceImageView
        android:id="@+id/v_content_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <com.android.internal.widget.PreferenceImageView
        android:id="@+id/v_content_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <com.android.internal.widget.PreferenceImageView
        android:id="@+id/v_content_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <com.android.internal.widget.PreferenceImageView
        android:id="@+id/v_content_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

</LinearLayout>