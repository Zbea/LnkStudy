<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawing_bottom_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_expand_left"
            android:layout_width="@dimen/drawing_bottom_height"
            android:layout_height="match_parent"
            android:layout_marginStart="44dp"
            android:scaleType="center"
            android:visibility="gone"
            android:src="@mipmap/icon_draw_expand" />
        <ImageView
            android:id="@+id/iv_tool_left"
            android:layout_width="@dimen/drawing_bottom_height"
            android:layout_height="match_parent"
            android:layout_marginStart="44dp"
            android:scaleType="center"
            android:visibility="gone"
            android:src="@mipmap/icon_draw_tool" />

        <ImageView
            android:id="@+id/iv_erasure"
            android:layout_width="@dimen/drawing_bottom_height"
            android:layout_height="match_parent"
            android:layout_marginStart="44dp"
            android:scaleType="center"
            android:src="@mipmap/icon_draw_erasure" />

        <ImageView
            android:id="@+id/btn_page_up"
            android:layout_width="@dimen/drawing_bottom_height"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_marginStart="44dp"
            android:src="@mipmap/icon_draw_page_up" />

        <View
            android:id="@+id/iv_catalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_page_content_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/tv_page_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/v_empty"
        android:layout_width="800dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_expand_a"
                android:layout_width="@dimen/drawing_bottom_height"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:layout_marginEnd="44dp"
                android:visibility="gone"
                android:src="@mipmap/icon_draw_expand" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_expand_b"
                android:layout_width="@dimen/drawing_bottom_height"
                android:layout_height="match_parent"
                android:layout_marginStart="44dp"
                android:scaleType="center"
                android:visibility="gone"
                android:src="@mipmap/icon_draw_expand" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_page_content_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/tv_page_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="1/1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

    <View
        android:id="@+id/iv_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/btn_page_down"
        android:layout_width="@dimen/drawing_bottom_height"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_marginEnd="44dp"
        android:src="@mipmap/icon_draw_page_down" />
    <ImageView
        android:id="@+id/iv_draft"
        android:layout_width="@dimen/drawing_bottom_height"
        android:layout_height="match_parent"
        android:layout_marginEnd="44dp"
        android:scaleType="center"
        android:src="@mipmap/icon_draw_draft" />
    <ImageView
        android:id="@+id/iv_expand_right"
        android:layout_width="@dimen/drawing_bottom_height"
        android:layout_height="match_parent"
        android:layout_marginEnd="44dp"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@mipmap/icon_draw_expand" />

    <ImageView
        android:id="@+id/iv_tool_right"
        android:layout_width="@dimen/drawing_bottom_height"
        android:layout_height="match_parent"
        android:layout_marginEnd="44dp"
        android:scaleType="center"
        android:src="@mipmap/icon_draw_tool"
        android:visibility="gone" />
    </LinearLayout>

</LinearLayout>