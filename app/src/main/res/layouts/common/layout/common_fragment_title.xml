<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_height">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="33dp"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_course"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_5"
            android:paddingStart="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24"
            android:text="科目"
            android:visibility="gone"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            android:lines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_semester"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            android:lines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:lines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:background="@drawable/click_btn_line_black_5dp"
            />

        <ImageView
            android:id="@+id/iv_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:visibility="gone"
            android:src="@mipmap/icon_manager"
            android:padding="2dp"
            />

    </LinearLayout>



</RelativeLayout>
