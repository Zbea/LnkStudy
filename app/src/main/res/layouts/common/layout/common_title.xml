<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_height">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="52dp"
        android:paddingEnd="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_back" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_back"
        android:textColor="@color/black"
        android:textSize="@dimen/navigation_text"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:layout_marginEnd="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/bg_gray_stroke_5dp_corner"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="2022"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_30"
                android:text="@string/year"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/bg_gray_stroke_5dp_corner"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_province"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            android:lines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_course"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            android:lines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            android:lines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_subgrade"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_semester"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            android:lines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />


        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:visibility="gone"
            android:lines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:visibility="gone"
            android:lines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:visibility="gone"
            android:src="@mipmap/icon_manager"/>
    </LinearLayout>



</RelativeLayout>
