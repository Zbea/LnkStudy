<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="980dp"
        android:layout_height="98dp"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:gravity="center_vertical"
        android:background="@drawable/bg_black_stroke_0dp_corner"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_line"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rectangle"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:id="@+id/iv_rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_rectangle"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@mipmap/icon_bookstore_arrow_down"
                android:text="@string/circle"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:id="@+id/iv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_circle"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arc"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:id="@+id/iv_arc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_arc"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oval"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:id="@+id/iv_oval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_oval"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:id="@+id/iv_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_vertical"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parabola"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:id="@+id/iv_parabola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_parabola"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/angle"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:id="@+id/iv_angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_angle"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/axis"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:id="@+id/iv_axis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_geometry_axis"
                android:layout_marginTop="@dimen/dp_15"

                />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_lengthen"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="@string/lengthen"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                />

            <TextView
                android:id="@+id/tv_excision"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="@string/excision"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_gray_line"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:paddingEnd="@dimen/dp_5"
                android:paddingStart="@dimen/dp_5"
                android:drawableRight="@mipmap/icon_bookstore_arrow_down"
                android:gravity="center"
                android:text="@string/grayLine"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                />

            <TextView
                android:id="@+id/tv_scale"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="@string/scale"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_40"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_reduce"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="@string/reduce"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                />

            <TextView
                android:id="@+id/tv_out"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="@string/quit"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>