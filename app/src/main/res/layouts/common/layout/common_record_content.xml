<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/iv_file"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="400dp"
        android:src="@mipmap/icon_record" />

    <LinearLayout
        android:id="@+id/ll_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_marginEnd="@dimen/dp_10"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/black"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/icon_record_play" />

        <TextView
            android:id="@+id/tv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="播放"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_speed_0_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0.5X"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_speed_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1X"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_marginStart="@dimen/dp_30"
            android:background="@drawable/bg_black_solid_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_speed_1_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1.5X"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:layout_marginStart="@dimen/dp_30"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_speed_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="2X"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:layout_marginStart="@dimen/dp_30"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_speed_2_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="2.5X"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:layout_marginStart="@dimen/dp_30"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

    </LinearLayout>

</LinearLayout>