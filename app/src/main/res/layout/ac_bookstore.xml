<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <include layout="@layout/common_fragment_title"/>

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xtab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xtab_height"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        app:xTabTextSize="@dimen/sp_22"
        app:xTabTextColor="@color/black"
        app:xTabSelectedTextColor="@color/black"
        app:xTabSelectedTextSize="22sp"
        app:xTabIndicatorColor="@color/black"
        app:xTabIndicatorHeight="2dp"
        app:xTabDividerWidthWidthText="true"
        ></com.androidkun.xtablayout.XTabLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/dp_25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_province"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:background="@drawable/bg_gray_stroke_10dp_corner"
            android:gravity="center"
            android:text="广东省"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="120dp"
            android:background="@drawable/bg_gray_stroke_10dp_corner"
            android:gravity="center"
            android:text="小学低年级"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:layout_weight="1"/>

    <include layout="@layout/common_page_number" />

</LinearLayout>