<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical">

    <include layout="@layout/common_fragment_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/btn_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:src="@mipmap/icon_book_type_arrow_left" />

            <com.androidkun.xtablayout.XTabLayout
                android:id="@+id/xt_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                app:xTabDividerWidth="16dp"
                app:xTabDividerColor="@color/white"
                app:xTabBackgroundColor="@color/color_transparent"
                app:xTabDisplayNum="11"
                app:xTabIndicatorColor="@color/black"
                app:xTabIndicatorHeight="2dp"
                app:xTabMode="scrollable"
                app:xTabSelectedTextColor="@color/black"
                app:xTabSelectedTextSize="22sp"
                app:xTabTextColor="@color/black"
                app:xTabTextSize="22sp"/>

            <ImageView
                android:id="@+id/btn_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:src="@mipmap/icon_book_type_arrow_right"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            />

    </LinearLayout>

    <include layout="@layout/common_page_number" />


</LinearLayout>