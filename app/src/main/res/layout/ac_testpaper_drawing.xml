<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <com.android.internal.widget.PreferenceImageView
                android:id="@+id/v_content_a"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <com.android.internal.widget.PreferenceImageView
                android:id="@+id/v_content_b"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawing_bottom_height"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_page_up"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_30"
            android:scaleType="center"
            android:src="@mipmap/icon_draw_page_up" />

        <TextView
            android:id="@+id/tv_page_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black_50"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_page_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black_50"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/btn_page_down"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_30"
            android:scaleType="center"
            android:src="@mipmap/icon_draw_page_down" />


    </LinearLayout>

    <ImageView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_30"
        android:src="@mipmap/icon_save" />

</RelativeLayout>