<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/icon_note_draw_setting_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_draw_clear"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center"
            android:text="圈选擦除"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_clear_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_draw_clear_all"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center"
            android:text="全部擦除"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/black"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_fine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_draw_fine"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center"
            android:text="细"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_thick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_draw_thick"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center"
            android:text="粗"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/black"
            />

    </LinearLayout>

</LinearLayout>