<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawing_bottom_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_tool_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:src="@mipmap/icon_draw_tool" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_page_up"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/icon_draw_page_up" />

        <View
            android:id="@+id/iv_catalog"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_page_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black_50"
            android:textSize="20sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_24" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_page_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/black_50"
            android:textSize="20sp" />


        <View
            android:id="@+id/iv_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/btn_page_down"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/icon_draw_page_down" />


        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_30"
                android:src="@mipmap/icon_draw_expand" />

            <ImageView
                android:id="@+id/iv_tool_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_30"
                android:src="@mipmap/icon_draw_tool"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>