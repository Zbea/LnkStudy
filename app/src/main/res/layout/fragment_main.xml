<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical">

    <include layout="@layout/common_fragment_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_date"
            style="@style/main_content_size"
            android:background="@mipmap/icon_main_content_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_content_title_height">

                <TextView
                    android:id="@+id/tv_date_today"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_content_title_height"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:drawableLeft="@mipmap/icon_main_date"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_date_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="。。。"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="5dp"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_plan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:visibility="gone" />

            </RelativeLayout>



        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_48"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/ll_course"
            style="@style/main_content_size"
            android:background="@mipmap/icon_main_content_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_content_title_height"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:drawableLeft="@mipmap/icon_main_course"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:text="课程表"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_course_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/color_transparent"
                    android:gravity="center"
                    android:paddingEnd="@dimen/dp_20"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_30" />


            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_message"
            style="@style/main_content_size"
            android:background="@mipmap/icon_main_content_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/main_content_title_height"
                android:drawableLeft="@mipmap/icon_main_message"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:text="信息"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10" />

        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_48"
            android:layout_height="match_parent"
            />
        <LinearLayout
            style="@style/main_content_size"
            android:background="@mipmap/icon_main_content_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/main_content_title_height"
                android:drawableLeft="@mipmap/icon_main_homework"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:text="收到作业"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@mipmap/icon_main_homework_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="作  业"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_22"
                        android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_main_homework"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_10" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@mipmap/icon_main_homework_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考  卷"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_22"
                        android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_main_testpaper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_10" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_textbook"
            style="@style/main_content_size"
            android:background="@mipmap/icon_main_content_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/main_content_title_height"
                android:drawableLeft="@mipmap/icon_main_textbook"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:text="课业进度"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_textbook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_48"
            android:layout_height="match_parent"
            />

        <LinearLayout
            style="@style/main_content_size"
            android:background="@mipmap/icon_main_content_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/main_content_title_height"
                android:drawableLeft="@mipmap/icon_main_note"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:text="笔记"/>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>