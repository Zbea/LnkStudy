<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:scaleType="center"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="新建"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="学习计划"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40sp" />


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="right"
            android:text="保存"
            android:textColor="@color/black"
            android:textSize="24sp" />


    </LinearLayout>


    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xt_date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        app:xTabBackgroundColor="@color/color_transparent"
        app:xTabDisplayNum="3"
        app:xTabIndicatorColor="@color/black"
        app:xTabIndicatorHeight="2dp"
        app:xTabIndicatorWidth="120dp"
        app:xTabMode="fixed"
        app:xTabSelectedTextColor="@color/black"
        app:xTabSelectedTextSize="22sp"
        app:xTabTextColor="@color/black"
        app:xTabTextSize="22sp"></com.androidkun.xtablayout.XTabLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ll_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_plan_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:id="@+id/tv_plan_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_plan_start_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/date_add_event_height"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_line_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_plan_start_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/black_20"
                    android:textSize="20sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_plan_end_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/date_add_event_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_line_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_plan_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/color_transparent"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/black_20"
                    android:textSize="20sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_plan_repeat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/date_add_event_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_line_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重复"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_plan_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:gravity="right|center_vertical"
                    android:text="不重复"
                    android:textColor="@color/black_20"
                    android:textSize="20sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_plan_remind"
                android:layout_width="match_parent"
                android:layout_height="@dimen/date_add_event_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_line_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="添加提醒"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right"/>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_plan_remind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_add_event_height"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_schedule_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:background="@color/color_transparent"
                android:gravity="right|center_vertical"
                android:textColor="@color/black_20"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_schedule_date_start"
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_add_event_height"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_schedule_date_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@color/color_transparent"
                android:gravity="right|center_vertical"
                android:textColor="@color/black_20"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_schedule_date_end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_add_event_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_schedule_date_end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@color/color_transparent"
                android:gravity="right|center_vertical"
                android:textColor="@color/black_20"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_schedule_repeat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_add_event_height"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重复"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_schedule_repeat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:gravity="right|center_vertical"
                android:text="不重复"
                android:textColor="@color/black_20"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_schedule_remind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_add_event_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="添加提醒"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"/>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_schedule_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <EditText
            android:id="@+id/et_day_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_add_event_height"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_line_bottom"
            android:hint="考试/生日/纪恋日"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_add_event_height"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_day_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@color/color_transparent"
                android:gravity="right|center_vertical"
                android:textColor="@color/black_20"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_add_event_height"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计时"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_day_repeat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_add_event_height"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重复"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_day_repeat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@color/color_transparent"
                android:text="不重复"
                android:gravity="right|center_vertical"
                android:textColor="@color/black_20"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_day_remind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/date_add_event_height"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="添加提醒"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_day_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/et_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_line_bottom"
            android:hint="说明"
            android:minHeight="@dimen/date_add_event_height"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>